{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Local Release Test",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\local-release-test.ps1",
        "-Version",
        "${input:releaseVersion}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "releaseVersion",
      "type": "promptString",
      "description": "发布版本号（仅数字点分，例如 1.0.4）",
      "default": "1.0.4"
    }
  ]
}
